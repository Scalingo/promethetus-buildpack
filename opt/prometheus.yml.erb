global:
  scrape_interval:     15s
  evaluation_interval: 30s

remote_write:
  - url: "<%= promscale_url %>/write"
    basic_auth:
      username: "<%= ENV["PROMSCALE_AUTH_USERNAME"] %>"
      password: "<%= ENV["PROMSCALE_AUTH_PASSWORD"] %>"

remote_read:
  - url: "<%= promscale_url %>/read"
    read_recent: true
    basic_auth:
      username: "<%= ENV["PROMSCALE_AUTH_USERNAME"] %>"
      password: "<%= ENV["PROMSCALE_AUTH_PASSWORD"] %>"

scrape_configs:
# Get self-metrics
- job_name: "prometheus"
  static_configs:
    - targets: ["<%= ENV["APP"] %>.osc-st-fr1.apps.st-sc.fr"]

- job_name: "promscale"
  basic_auth:
    username: "<%= ENV["PROMSCALE_AUTH_USERNAME"] %>"
    password: "<%= ENV["PROMSCALE_AUTH_PASSWORD"] %>"
  static_configs:
    - targets: ["<%= ENV["PROMSCALE_HOSTNAME"] %>"]

- job_name: "gitaly"
  static_configs:
    - targets: ["<%= target_gitaly %>"]

- job_name: "praefect"
  static_configs:
    - targets: ["<%= target_praefect %>"]
